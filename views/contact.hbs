<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>contact</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <form action="/contact" method="post" enctype="application/x-www-form-urlencoded">

                <label for="Email" class="form-label mt-3">Adresse Email</label>
                <input name="email" type="email" class="form-control" id="Email" placeholder="name@example.com">

                <label for="content" class="form-label mt-3">Votre message</label>
                <textarea name="content" class="form-control" id="content" rows="3"></textarea>
                <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                    <button class="btn btn-outline-primary me-md-2" type="submit">Envoyer</button>
                </div>
            </form>

        </div>
    </div>