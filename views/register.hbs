<section class="vh-100" style="background-color: #eee;">
  <div class="container h-100">

    <div class="row d-flex justify-content-center align-items-center h-75">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5">
            <div class="progress">
              <div class="progress-bar progress-bar-striped" role="progressbar" style="width: 10%" aria-valuenow="33"
                aria-valuemin="0" aria-valuemax="100"></div>
            </div>
            {{#if errors}}
            <div class="row justify-content-center">
              <div class="col-md-5">
                <ul class="list-group">
                  {{#each errors}}
                  <li class="list-group-item list-group-item-danger">{{msg}}</li>
                  {{/each}}
                </ul>
              </div>
            </div>
            {{/if}}
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">S'inscrire</p>

                <form class="mx-1 mx-md-4" action="/inscription" method="POST">
                  <input name="csrf" type="hidden" value="{{csrf}}">
                  
                 

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <input name="email" type="text" id="form3Example3c" class="form-control" />
                      <label class="form-label" for="form3Example3c">Votre email</label>
                    </div>
                  </div>
                 

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <input name="password" type="password" id="form3Example4c" class="form-control" />
                      <label class="form-label" for="form3Example4c">Votre mot de passe</label>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <input name="confPassword" type="password" id="form3Example4cd" class="form-control" />
                      <label class="form-label" for="form3Example4cd">Confirmer votre mot de passe</label>
                    </div>
                  </div>

                

                  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                    <button type="submit" class="btn btn-primary btn-lg">S'enregistrer</button>
                  </div>

                </form>

              </div>
              <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                <img src="/public/draw1.webp" class="img-fluid" alt="Sample image">

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
